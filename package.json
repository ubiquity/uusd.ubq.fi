{
  "name": "uusd.ubq.fi",
  "module": "src/app.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run build:watch & bun run serve:dev",
    "build": "bun run esbuild src/app.ts --bundle --outfile=public/app.js --minify --format=esm --platform=browser --sourcemap",
    "build:watch": "bun run esbuild src/app.ts --bundle --outfile=public/app.js --format=esm --platform=browser --sourcemap=inline --watch=forever",
    "serve": "deno run --allow-all serve.ts",
    "serve:dev": "deno run --allow-all serve-dev.ts",
    "serve:bun": "bun run serve.ts",
    "serve:bun:dev": "bun run serve-dev.ts",
    "browser:open": "/Applications/Brave\\ Browser.app/Contents/MacOS/Brave\\ Browser --remote-debugging-port=9222",
    "diamond": "bun run tools/diamond-reader.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "esbuild": "^0.19.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@reown/appkit": "^1.8.15",
    "@reown/appkit-adapter-wagmi": "^1.8.15",
    "@tanstack/react-query": "^5.90.12",
    "@ubiquity-dao/permit2-rpc-client": "^0.1.2",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "viem": "^2.43.3",
    "wagmi": "^3.1.3"
  }
}
